<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainMenuActivity">

    <TextView
        android:text="Por favor seleccione una opción para cambio de ventana"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_logged_user"
        android:text="John Doeee"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_chghistorialacademico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0EA330"
        android:text="Historial Académico" />

    <Button
        android:id="@+id/btn_chgperfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0EA330"
        android:text="Perfil" />

    <Button
        android:id="@+id/btn_chghorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0EA330"
        android:text="Horario" />

    <Button
        android:id="@+id/btn_chgsalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0EA330"
        android:text="Salir" />


</android.support.v7.widget.LinearLayoutCompat>